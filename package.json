{
  "name": "quinto",
  "version": "0.3.0",
  "license": "Apache-2.0",
  "description": "Utility to capture imprecise user interactions in the DOM",
  "author": "Eric Liu (https://github.com/metonym)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "develop": "tsc -w",
    "build": "rm -rf lib && tsc -p tsconfig.prod.json",
    "test": "jest --coverage",
    "test:tdd": "jest --watch",
    "lint": "tslint --fix -p . -c tslint.json",
    "prepublishOnly": "run-s test build"
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/enzyme": "3.10.3",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/jest": "24.0.17",
    "@types/react": "16.9.2",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "husky": "3.0.3",
    "jest": "24.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "4.0.0",
    "typescript": "3.5.3"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>src/**/*.(spec|test).{ts,tsx}"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "resolutions": {
    "**/**/lodash": "^4.17.12",
    "**/**/mixin-deep": "^2.0.1",
    "**/**/set-value": "^3.0.1"
  },
  "homepage": "https://github.com/IBM/quinto",
  "bugs": "https://github.com/IBM/quinto/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/IBM/quinto.git"
  },
  "keywords": [
    "react",
    "event",
    "traverse",
    "dom"
  ],
  "files": [
    "lib/"
  ]
}
